# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ
# =============================================================================
APP_NAME=DiagMod
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
APP_DEBUG=true

# =============================================================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# =============================================================================
DATABASE_URL=postgresql+asyncpg://diagmod_user:diagmod_password@localhost:5432/diagmod
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=diagmod
DATABASE_USER=diagmod_user
DATABASE_PASSWORD=diagmod_password
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# НАСТРОЙКИ REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# НАСТРОЙКИ CELERY
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# =============================================================================
# НАСТРОЙКИ API
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_LOG_LEVEL=info

# =============================================================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_HASH_ALGORITHM=bcrypt

# =============================================================================
# НАСТРОЙКИ CORS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# НАСТРОЙКИ МОНИТОРИНГА
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001
METRICS_NAMESPACE=diagmod

# =============================================================================
# НАСТРОЙКИ ML МОДЕЛЕЙ
# =============================================================================
MODELS_PATH=./models
MODEL_AUTO_RETRAIN=true
MODEL_RETRAIN_INTERVAL_HOURS=24
ANOMALY_THRESHOLD=0.95
PREDICTION_HORIZON_DAYS=30

# =============================================================================
# НАСТРОЙКИ ОБРАБОТКИ ДАННЫХ
# =============================================================================
DATA_PATH=./data
CSV_BATCH_SIZE=10000
FEATURE_EXTRACTION_WORKERS=4
SIGNAL_SAMPLING_RATE=1000
FFT_WINDOW_SIZE=1024
OVERLAP_RATIO=0.5

# =============================================================================
# НАСТРОЙКИ DASHBOARD
# =============================================================================
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501
DASHBOARD_TITLE="DiagMod - Диагностика Двигателей"
API_URL=http://localhost:8000

# =============================================================================
# НАСТРОЙКИ ФАЙЛОВОГО ХРАНИЛИЩА
# =============================================================================
UPLOAD_MAX_SIZE=100MB
ALLOWED_EXTENSIONS=csv
STORAGE_BACKEND=local
STORAGE_PATH=./data/uploads

# =============================================================================
# НАСТРОЙКИ УВЕДОМЛЕНИЙ
# =============================================================================
NOTIFICATIONS_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@diagmod.com

# =============================================================================
# НАСТРОЙКИ РЕЗЕРВНОГО КОПИРОВАНИЯ
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Каждый день в 2:00
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups
